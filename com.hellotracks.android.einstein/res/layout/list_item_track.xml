<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="1dp"
    android:paddingBottom="1dp" >

    <FrameLayout
        android:id="@+id/layoutMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop">
        </ImageView>

        <TextView
            android:id="@+id/info"
            android:layout_width="150dp"
            android:layout_height="115dp"
            android:layout_gravity="left|bottom"
            android:background="#9FFF"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="15dp"
            android:textColor="#222"
            android:textSize="12sp" />
        
        <TextView
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="115dp"
            android:layout_gravity="left|bottom"
            android:layout_marginLeft="150dp"
            android:background="#9FFF"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textColor="#222"
            android:textSize="12sp"  />

        <TextView
            android:id="@+id/bubble"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:background="@drawable/bubble_green"
            android:textColor="#FFF" />
        
        <Button android:id="@+id/buttonTouch"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/button_darker"/>
        
        <ImageButton
            android:id="@+id/buttonEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|right"
            android:background="@drawable/button_blue"
            android:padding="4dp"
            android:src="@drawable/ic_action_edit" />

        <LinearLayout
            android:id="@+id/layoutLabels"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:padding="3dp" >

            <View
                android:id="@+id/label_green"
                android:layout_width="8dip"
                android:layout_height="8dip"
                android:layout_margin="2dip"
                android:background="@drawable/label_green" >
            </View>

            <View
                android:id="@+id/label_yellow"
                android:layout_width="8dip"
                android:layout_height="8dip"
                android:layout_margin="2dip"
                android:background="@drawable/label_yellow" >
            </View>

            <View
                android:id="@+id/label_orange"
                android:layout_width="8dip"
                android:layout_height="8dip"
                android:layout_margin="2dip"
                android:background="@drawable/label_orange" >
            </View>

            <View
                android:id="@+id/label_red"
                android:layout_width="8dip"
                android:layout_height="8dip"
                android:layout_margin="2dip"
                android:background="@drawable/label_red" >
            </View>

            <View
                android:id="@+id/label_violett"
                android:layout_width="8dip"
                android:layout_height="8dip"
                android:layout_margin="2dip"
                android:background="@drawable/label_violett" >
            </View>

            <View
                android:id="@+id/label_blue"
                android:layout_width="8dip"
                android:layout_height="8dip"
                android:layout_margin="2dip"
                android:background="@drawable/label_blue" >
            </View>
        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/layoutPause"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dip" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:text="@string/Halt"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/text" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/text" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="10dip"
            android:text="@string/ClickToMerge"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/text" />
    </LinearLayout>

</LinearLayout>