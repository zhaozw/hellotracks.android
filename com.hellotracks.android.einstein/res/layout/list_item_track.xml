<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="5dp"
    android:paddingRight="5dp" >

    <FrameLayout
        android:id="@+id/layoutMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/me_feed_nugget_bg"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="40dp"
            android:scaleType="centerCrop" >
        </ImageView>

        <TextView
            android:id="@+id/info"
            android:layout_width="130dp"
            android:layout_height="75dp"
            android:layout_gravity="left|bottom"
            android:layout_marginBottom="35dp"
            android:layout_marginLeft="10dp"
            android:background="#CFFF"
            android:fontFamily="@string/font_regular"
            android:padding="5dp"
            android:textColor="#111"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/bubble"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:background="@drawable/bubble_speach_white"
            android:fontFamily="@string/font_regular"
            android:textColor="@color/asbestos" />

        <TextView
            android:id="@+id/textTop"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="top"
            android:background="@color/white"
            android:paddingLeft="5dp"
            android:paddingTop="3dp"
            android:maxLines="2"
            android:minLines="2"
            android:lines="2"
            android:ellipsize="end"
            android:textColor="#111"
            android:textStyle="bold" />
        
        
        <Button
            android:id="@+id/buttonTouch"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@drawable/button_darker"
            android:fontFamily="@string/font_regular" />

        <ImageButton
            android:id="@+id/buttonEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|right"
            android:layout_marginRight="3dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/button_blue"
            android:fontFamily="@string/font_regular"
            android:padding="4dp"
            android:src="@drawable/ic_action_edit" />


        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="45dp"
            android:background="@drawable/me_feed_overlay" />

        <TextView
            android:id="@+id/textBottom"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="bottom"
            android:background="@color/white"
            android:gravity="center_vertical|left"
            android:paddingLeft="5dp"
            android:textColor="#999"
            android:textSize="13sp" />

        <LinearLayout
            android:id="@+id/layoutLabels"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:padding="8dp" >

            <View
                android:id="@+id/label_green"
                android:layout_width="8dip"
                android:layout_height="8dip"
                android:layout_margin="2dip"
                android:background="@drawable/label_green" >
            </View>

            <View
                android:id="@+id/label_yellow"
                android:layout_width="8dip"
                android:layout_height="8dip"
                android:layout_margin="2dip"
                android:background="@drawable/label_yellow" >
            </View>

            <View
                android:id="@+id/label_orange"
                android:layout_width="8dip"
                android:layout_height="8dip"
                android:layout_margin="2dip"
                android:background="@drawable/label_orange" >
            </View>

            <View
                android:id="@+id/label_red"
                android:layout_width="8dip"
                android:layout_height="8dip"
                android:layout_margin="2dip"
                android:background="@drawable/label_red" >
            </View>

            <View
                android:id="@+id/label_violett"
                android:layout_width="8dip"
                android:layout_height="8dip"
                android:layout_margin="2dip"
                android:background="@drawable/label_violett" >
            </View>

            <View
                android:id="@+id/label_blue"
                android:layout_width="8dip"
                android:layout_height="8dip"
                android:layout_margin="2dip"
                android:background="@drawable/label_blue" >
            </View>
        </LinearLayout>
    </FrameLayout>

    <RelativeLayout
        android:id="@+id/layoutPause"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textHalt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:fontFamily="@string/font_regular"
            android:text="@string/Halt"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/text" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/textHalt"
            android:fontFamily="@string/font_regular"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/text" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:layout_toRightOf="@+id/lineVertical"
            android:background="@color/timeline"
            android:fontFamily="@string/font_regular"
            android:text="@string/ClickToMerge"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/white" />

        <View
            android:id="@+id/lineVertical"
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:background="@color/timeline" />
    </RelativeLayout>

</LinearLayout>