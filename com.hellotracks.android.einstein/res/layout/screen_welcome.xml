<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/frameLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:background="#000" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/gradient"
        android:orientation="vertical" >

        <FrameLayout
            android:id="@+id/logoFrame"
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:background="@drawable/header_bg" >

            <ImageView
                android:id="@+id/logoImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="8dip"
                android:layout_marginLeft="35dip"
                android:layout_marginRight="35dip"
                android:layout_marginTop="8dip"
                android:scaleType="centerInside"
                android:src="@drawable/hellotracks" >
            </ImageView>
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dip"
            android:background="@drawable/body_fabric_dark"
            android:orientation="vertical" >

            <GridView
                android:id="@+id/grid"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:columnWidth="50dp"
                android:gravity="center"
                android:layoutAnimation="@anim/layout_grid_fade"
                android:numColumns="5"
                android:padding="1dp"
                android:stretchMode="spacingWidthUniform" />

            <Button
                android:id="@+id/signUpButton"
                style="@style/Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dip"
                android:onClick="onSignUp"
                android:text="@string/SignUp" />

            <Button
                android:id="@+id/loginButton"
                style="@style/Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dip"
                android:onClick="onLogIn"
                android:text="@string/LogIn" />

            <Button
                android:id="@+id/directButton"
                style="@style/Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dip"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:layout_marginTop="5dip"
                android:onClick="onDirect"
                android:text="@string/JustJumpIn" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/slogan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/Slogan"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/text"
                android:textSize="25dip" />
        </FrameLayout>
    </LinearLayout>

</FrameLayout>