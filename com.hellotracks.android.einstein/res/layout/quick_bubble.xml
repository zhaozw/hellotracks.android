<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:background="@drawable/bubbleblue"
		android:clickable="true">
		<LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">
		    <TextView
			android:id="@+id/title"
			android:layout_width="wrap_content" android:text="TextView" android:layout_height="wrap_content" android:textColor="#FFF"></TextView>
		    <TextView
			android:id="@+id/info"
			android:layout_width="wrap_content" android:text="TextView" android:layout_height="wrap_content" android:textColor="#EEE" android:textSize="10sp"></TextView>
		    <TextView
			android:id="@+id/timeAndAccuracy" android:layout_marginTop="3dip"
			android:layout_width="wrap_content" android:text="TextView" android:layout_height="wrap_content" android:textColor="#AAA" android:textSize="10sp"></TextView>
		    		</LinearLayout>		
		<ImageView
			android:id="@+id/pin"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:src="@drawable/btn_right"
			android:layout_marginRight="5dip"
			android:layout_marginLeft="5dip" />
	</LinearLayout>
