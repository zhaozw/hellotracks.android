<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
    <LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:layout_marginLeft="10dip"
				android:layout_marginRight="10dip"
				android:background="@drawable/gradient_dark">
				<LinearLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:orientation="vertical">
					<TextView
						android:id="@+id/block1top"
						android:layout_width="@dimen/blockwidth"
						android:layout_height="45dip"
						android:layout_marginLeft="@dimen/blockspace"
						android:background="@drawable/block_top"
						android:clickable="true"
						android:gravity="center_vertical|center_horizontal"
						android:onClick="onBlock1"
						android:text=""
						android:textColor="#FFFFFF"
						android:textSize="20dip">
					</TextView>
					<TextView
						android:id="@+id/block1bottom"
						android:layout_width="@dimen/blockwidth"
						android:layout_height="25dip"
						android:layout_marginLeft="@dimen/blockspace"
						android:background="@drawable/block_bottom"
						android:clickable="true"
						android:gravity="center_vertical|center_horizontal"
						android:onClick="onBlock1"
						android:text="@string/GPS"
						android:textColor="#ddd"
						android:textSize="10sp">
					</TextView>
				</LinearLayout>
				<LinearLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:orientation="vertical">
					<TextView
						android:id="@+id/block2top"
						android:layout_width="@dimen/blockwidth"
						android:layout_height="45dip"
						android:layout_marginLeft="@dimen/blockspace"
						android:background="@drawable/block_top"
						android:clickable="true"
						android:gravity="center_vertical|center_horizontal"
						android:onClick="onBlock2"
						android:text=""
						android:textColor="#FFFFFF"
						android:textSize="20dip">
					</TextView>
					<TextView
						android:id="@+id/block2bottom"
						android:layout_width="@dimen/blockwidth"
						android:layout_height="25dip"
						android:layout_marginLeft="@dimen/blockspace"
						android:background="@drawable/block_bottom"
						android:clickable="true"
						android:gravity="center_vertical|center_horizontal"
						android:onClick="onBlock2"
						android:text="@string/Internet"
						android:textColor="#ddd"
						android:textSize="10sp">
					</TextView>
				</LinearLayout>
				<View
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_weight="1" />
				<LinearLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:orientation="vertical">
					<TextView
						android:id="@+id/block3top"
						android:layout_width="@dimen/blockwidth"
						android:layout_height="45dip"
						android:layout_marginLeft="@dimen/blockspace"
						android:background="@drawable/block_top"
						android:clickable="true"
						android:gravity="center_vertical|center_horizontal"
						android:onClick="onBlock3"
						android:text=""
						android:textColor="#FFFFFF"
						android:textSize="20dip">
					</TextView>
					<TextView
						android:id="@+id/block3bottom"
						android:layout_width="@dimen/blockwidth"
						android:layout_height="25dip"
						android:layout_marginLeft="@dimen/blockspace"
						android:background="@drawable/block_bottom"
						android:clickable="true"
						android:gravity="center_vertical|center_horizontal"
						android:onClick="onBlock3"
						android:text="@string/Battery"
						android:textColor="#ddd"
						android:textSize="10sp">
					</TextView>
				</LinearLayout>
				<LinearLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:orientation="vertical">
					<TextView
						android:id="@+id/block4top"
						android:layout_width="@dimen/blockwidth"
						android:layout_height="45dip"
						android:layout_marginLeft="@dimen/blockspace"
						android:layout_marginRight="@dimen/blockspace"
						android:background="@drawable/block_top"
						android:clickable="true"
						android:gravity="center_vertical|center_horizontal"
						android:onClick="onBlock4"
						android:text=""
						android:textColor="#FFFFFF"
						android:textSize="20dip">
					</TextView>
					<TextView
						android:id="@+id/block4bottom"
						android:layout_width="@dimen/blockwidth"
						android:layout_height="25dip"
						android:layout_marginLeft="@dimen/blockspace"
						android:layout_marginRight="@dimen/blockspace"
						android:background="@drawable/block_bottom"
						android:clickable="true"
						android:gravity="center_vertical|center_horizontal"
						android:onClick="onBlock4"
						android:text="@string/Counter"
						android:textColor="#ddd"
						android:textSize="10sp">
					</TextView>
				</LinearLayout>
			</LinearLayout>
			
    	<include  layout="@layout/row" android:id="@+id/rowFuzzy" />
    	<include  layout="@layout/row" android:id="@+id/rowTransport" />
    	<include  layout="@layout/row" android:id="@+id/rowIntelligent" />
    	<include  layout="@layout/row" android:id="@+id/rowOutdoor" />
</LinearLayout>
