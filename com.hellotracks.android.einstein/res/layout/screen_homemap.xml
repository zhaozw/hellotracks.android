<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/gradient"
    android:orientation="vertical" >

    <!-- releaseKey="0TA7w9eU4emjYVcxzDR7inovmUbmhQq-OAdAh1Q" -->
    <!-- debugKey = 0TA7w9eU4emg4zrvXMDhWsOljjcNse8t1l1o2gw -->

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_gravity="center"
        android:background="@color/pressed"
        android:gravity="center"
        android:text="@string/hellotracks"
        android:textColor="@color/white"
        android:textSize="11sp"
        android:visibility="gone" />
    
    

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <fragment
            android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            class="com.hellotracks.einstein.TransparentSupportMapFragment" />

        

        <ImageButton
            android:id="@+id/buttonLayers"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dip"
            android:layout_marginTop="60dp"
            android:background="@drawable/custom_button_trans_light"
            android:onClick="onLayers"
            android:scaleType="centerInside"
            android:src="@drawable/ic_action_map_white" >
        </ImageButton>


        <ImageButton
            android:id="@+id/buttonTracks"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:layout_below="@+id/buttonLayers"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dip"
            android:layout_marginTop="10dip"
            android:background="@drawable/custom_button_trans_light"
            android:onClick="onTracks"
            android:scaleType="centerInside"
            android:src="@drawable/ic_action_tracks_gray" >
        </ImageButton>

        <ImageButton
            android:id="@+id/buttonDriving"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/buttonTracks"
            android:layout_marginRight="12dip"
            android:layout_marginTop="10dp"
            android:background="@drawable/custom_button_trans_light"
            android:onClick="onDriving"
            android:scaleType="centerInside"
            android:src="@drawable/ic_action_driving_gray" >
        </ImageButton>

        <ImageButton
            android:id="@+id/buttonMessages"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/buttonDriving"
            android:layout_marginRight="12dip"
            android:layout_marginTop="10dip"
            android:background="@drawable/custom_button_trans_light"
            android:onClick="onMessages"
            android:scaleType="centerInside"
            android:visibility="gone"
            android:src="@drawable/ic_action_messages_gray" >
        </ImageButton>

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dip"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            android:scrollbars="none" >

            <LinearLayout
                android:id="@+id/tracksActionsContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
            </LinearLayout>
        </HorizontalScrollView>

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dp" >

            <ImageButton
                android:id="@+id/buttonMenu"
                android:layout_width="60dip"
                android:layout_height="60dip"
                android:layout_margin="2dip"
                android:background="@drawable/custom_button_trans_nopadding"
                android:onClick="onMenu"
                android:scaleType="centerInside"
                android:src="@drawable/ic_action_menu"
                android:visibility="gone" >
            </ImageButton>

            <FrameLayout
                android:id="@+id/frameOnOff"
                android:layout_width="60dip"
                android:layout_height="60dip"
                android:layout_margin="2dip" >

                <ImageButton
                    android:id="@+id/buttonOnOff"
                    android:layout_width="60dip"
                    android:layout_height="60dip"
                    android:layout_gravity="top|center_horizontal"
                    android:background="@drawable/custom_button_trans_green"
                    android:onClick="onOnOff"
                    android:scaleType="centerInside"
                    android:src="@drawable/btn_on" >
                </ImageButton>

                <TextView
                    android:id="@+id/trackingText"
                    android:layout_width="wrap_content"
                    android:layout_height="60dip"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginTop="2dip"
                    android:text="@string/Locating"
                    android:textColor="#FFF"
                    android:textSize="10sp" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/frameMode"
                android:layout_width="60dip"
                android:layout_height="60dip"
                android:layout_margin="2dip" >

                <ImageButton
                    android:id="@+id/buttonMode"
                    android:layout_width="60dip"
                    android:layout_height="60dip"
                    android:layout_gravity="top|center_horizontal"
                    android:background="@drawable/custom_button_trans_nopadding"
                    android:onClick="onCockpit"
                    android:scaleType="centerInside"
                    android:src="@drawable/mode_transport" >
                </ImageButton>

                <TextView
                    android:id="@+id/textMode"
                    android:layout_width="wrap_content"
                    android:layout_height="60dip"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginTop="2dip"
                    android:text="@string/Cockpit"
                    android:textColor="#FFF"
                    android:textSize="10sp" />
            </FrameLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/textSpeed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/linearLayout1"
            android:layout_alignParentLeft="true"
            android:padding="20dp"
            android:textSize="30dp"
            android:textColor="@color/darkgray"
            android:text="0 km/h"
            android:background="@drawable/custom_button_trans_light"
            android:visibility="gone"/>

        <LinearLayout
            android:id="@+id/layoutList"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="#DD000000"
            android:visibility="gone"
            android:clickable="true" >
            
            <ImageButton
                android:id="@+id/buttonCloseList"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="right|center_vertical"
                android:background="@drawable/custom_button_trans"
                android:onClick="onCloseList"
                android:src="@drawable/ic_action_close" >
            </ImageButton>

            <ListView
                android:id="@+id/listView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
            </ListView>
            
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>