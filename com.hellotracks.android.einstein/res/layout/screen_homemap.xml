<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ht="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/gradient"
    android:orientation="vertical" >

    <!-- releaseKey="0TA7w9eU4emjYVcxzDR7inovmUbmhQq-OAdAh1Q" -->
    <!-- debugKey = 0TA7w9eU4emg4zrvXMDhWsOljjcNse8t1l1o2gw -->

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_gravity="center"
        android:background="@color/pressed"
        android:gravity="center"
        android:text="@string/hellotracks"
        android:textColor="@color/white"
        android:textSize="11sp"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <fragment
            android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            class="com.hellotracks.einstein.TransparentSupportMapFragment" />

        <ImageButton
            android:id="@+id/buttonLayers"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dip"
            android:layout_marginTop="60dp"
            android:background="@drawable/custom_button_trans_light"
            android:onClick="onLayers"
            android:scaleType="centerInside"
            android:src="@drawable/ic_action_map_white" >
        </ImageButton>

        <ImageButton
            android:id="@+id/buttonDriving"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/buttonLayers"
            android:layout_marginRight="12dip"
            android:layout_marginTop="10dp"
            android:background="@drawable/custom_button_trans_light"
            android:onClick="onDriving"
            android:scaleType="centerInside"
            android:src="@drawable/ic_action_driving_gray" >
        </ImageButton>

        <ImageButton
            android:id="@+id/buttonMessages"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/buttonDriving"
            android:layout_marginRight="12dip"
            android:layout_marginTop="10dip"
            android:background="@drawable/custom_button_trans_light"
            android:onClick="onMessages"
            android:scaleType="centerInside"
            android:src="@drawable/ic_action_messages_gray"
            android:visibility="gone" >
        </ImageButton>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CCFFFFFF"
            android:orientation="horizontal"
            android:scrollbars="none" >
        </View>

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="4dip"
            android:orientation="horizontal"
            android:scrollbars="none" >

            <LinearLayout
                android:id="@+id/tracksActionsContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
            </LinearLayout>
        </HorizontalScrollView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dp"
            android:orientation="vertical"
            android:visibility="visible"
            android:background="@drawable/custom_button_trans_light"
            android:padding="3dp" >
       
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text"
                android:textSize="12sp"
                android:gravity="center"
                android:text="@string/TrackRecording" />

            <org.jraf.android.backport.switchwidget.Switch
                android:id="@+id/switchPower"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <TextView
            android:id="@+id/textSpeed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/linearLayout1"
            android:layout_alignParentLeft="true"
            android:background="@drawable/custom_button_trans_light"
            android:padding="20dp"
            android:text="0 km/h"
            android:textColor="@color/darkgray"
            android:textSize="30dp"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/layoutList"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="#DD000000"
            android:clickable="true"
            android:orientation="vertical"
            android:visibility="gone" >

            <ImageButton
                android:id="@+id/buttonCloseList"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="right|center_vertical"
                android:background="@drawable/custom_button_trans"
                android:onClick="onCloseList"
                android:src="@drawable/ic_action_close" >
            </ImageButton>

            <ListView
                android:id="@+id/listView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
            </ListView>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>