<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/frameLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#43536A" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:background="#00000000"
        android:orientation="vertical" >



        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                

                <Button
                    android:id="@+id/tracks"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing"
                    android:layout_marginLeft="@dimen/sidepadding"
                    android:layout_marginRight="@dimen/sidepadding"
                    android:layout_marginTop="0dip"
                    android:background="@drawable/custom_button_block_bottom"
                    android:drawableLeft="@drawable/ic_action_tracks"
                    android:drawableRight="@drawable/ic_action_arrow_right"
                    android:gravity="left|center_vertical"
                    android:onClick="onTracks"
                    android:text="@string/Tracks"
                    android:textColor="@color/white" >
                </Button>

                <Button
                    android:id="@+id/activitiesButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing"
                    android:layout_marginLeft="@dimen/sidepadding"
                    android:layout_marginRight="@dimen/sidepadding"
                    android:layout_marginTop="@dimen/sidepadding"
                    android:background="@drawable/custom_button_block_top"
                    android:drawableLeft="@drawable/ic_action_activities"
                    android:drawableRight="@drawable/ic_action_arrow_right"
                    android:gravity="left|center_vertical"
                    android:onClick="onActivities"
                    android:text="@string/Activities"
                    android:textColor="@color/white"
                    android:visibility="gone" >
                </Button>
                
                <Button
                    android:id="@+id/messagesButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing"
                    android:layout_marginLeft="@dimen/sidepadding"
                    android:layout_marginRight="@dimen/sidepadding"
                    android:background="@drawable/custom_button_block_none"
                    android:drawableLeft="@drawable/ic_action_messages"
                    android:drawableRight="@drawable/ic_action_arrow_right"
                    android:gravity="left|center_vertical"
                    android:onClick="onMessages"
                    android:text="@string/Messages"
                    android:textColor="@color/white"
                    android:visibility="visible" >
                </Button>

                <Button
                    android:id="@+id/networkButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing"
                    android:layout_marginLeft="@dimen/sidepadding"
                    android:layout_marginRight="@dimen/sidepadding"
                    android:background="@drawable/custom_button_block_bottom"
                    android:drawableLeft="@drawable/ic_action_contacts"
                    android:drawableRight="@drawable/ic_action_arrow_right"
                    android:gravity="left|center_vertical"
                    android:onClick="onNetwork"
                    android:text="@string/Contacts"
                    android:textColor="@color/white"
                    android:visibility="visible" >
                </Button>
                
                <Button
                    android:id="@+id/settingsButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing"
                    android:layout_marginLeft="@dimen/sidepadding"
                    android:layout_marginRight="@dimen/sidepadding"
                    android:layout_marginTop="@dimen/sidepadding"
                    android:background="@drawable/custom_button_block_top"
                    android:drawableLeft="@drawable/ic_action_settings"
                    android:drawableRight="@drawable/ic_action_arrow_right"
                    android:gravity="left|center_vertical"
                    android:onClick="onCockpit"
                    android:text="@string/Settings"
                    android:textColor="@color/white"
                    android:visibility="visible" >
                </Button>

                

                <Button
                    android:id="@+id/rateButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/sidepadding"
                    android:background="@drawable/custom_button_block_one"
                    android:drawableLeft="@drawable/ic_action_rate"
                    android:drawableRight="@drawable/ic_action_arrow_right"
                    android:gravity="left|center_vertical"
                    android:onClick="onRate"
                    android:text="@string/PleaseRate"
                    android:textColor="@color/white"
                    android:visibility="gone" >
                </Button>
                
                
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp" >

                    <LinearLayout
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:visibility="visible" >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical" >

                            <TextView
                                android:id="@+id/block1top"
                                android:layout_width="@dimen/blockwidth"
                                android:layout_height="45dip"
                                android:layout_marginLeft="@dimen/blockspace"
                                android:background="@drawable/block_top"
                                android:clickable="true"
                                android:gravity="center_vertical|center_horizontal"
                                android:onClick="onBlock1"
                                android:text=""
                                android:textColor="#FFFFFF"
                                android:textSize="20dip" >
                            </TextView>

                            <TextView
                                android:id="@+id/block1bottom"
                                android:layout_width="@dimen/blockwidth"
                                android:layout_height="25dip"
                                android:layout_marginLeft="@dimen/blockspace"
                                android:background="@drawable/block_bottom"
                                android:clickable="true"
                                android:gravity="center_vertical|center_horizontal"
                                android:onClick="onBlock1"
                                android:text="@string/GPS"
                                android:textColor="#ddd"
                                android:textSize="10sp" >
                            </TextView>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical" >

                            <TextView
                                android:id="@+id/block2top"
                                android:layout_width="@dimen/blockwidth"
                                android:layout_height="45dip"
                                android:layout_marginLeft="@dimen/blockspace"
                                android:background="@drawable/block_top"
                                android:clickable="true"
                                android:gravity="center_vertical|center_horizontal"
                                android:onClick="onBlock2"
                                android:text=""
                                android:textColor="#FFFFFF"
                                android:textSize="20dip" >
                            </TextView>

                            <TextView
                                android:id="@+id/block2bottom"
                                android:layout_width="@dimen/blockwidth"
                                android:layout_height="25dip"
                                android:layout_marginLeft="@dimen/blockspace"
                                android:background="@drawable/block_bottom"
                                android:clickable="true"
                                android:gravity="center_vertical|center_horizontal"
                                android:onClick="onBlock2"
                                android:text="@string/Internet"
                                android:textColor="#ddd"
                                android:textSize="10sp" >
                            </TextView>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical" >

                            <TextView
                                android:id="@+id/block3top"
                                android:layout_width="@dimen/blockwidth"
                                android:layout_height="45dip"
                                android:layout_marginLeft="@dimen/blockspace"
                                android:background="@drawable/block_top"
                                android:clickable="true"
                                android:gravity="center_vertical|center_horizontal"
                                android:onClick="onBlock3"
                                android:text=""
                                android:textColor="#FFFFFF"
                                android:textSize="20dip" >
                            </TextView>

                            <TextView
                                android:id="@+id/block3bottom"
                                android:layout_width="@dimen/blockwidth"
                                android:layout_height="25dip"
                                android:layout_marginLeft="@dimen/blockspace"
                                android:background="@drawable/block_bottom"
                                android:clickable="true"
                                android:gravity="center_vertical|center_horizontal"
                                android:onClick="onBlock3"
                                android:text="@string/Battery"
                                android:textColor="#ddd"
                                android:textSize="10sp" >
                            </TextView>
                        </LinearLayout>

                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</FrameLayout>