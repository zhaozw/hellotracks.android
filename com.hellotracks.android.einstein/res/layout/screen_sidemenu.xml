<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ht="http://schemas.android.com/apk/res-auto"
    xmlns:switchpref="http://schemas.android.com/apk/res-auto"
    android:id="@+id/frameLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/htBlueLight" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:background="#00000000"
        android:orientation="vertical" >

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CCC"
            android:orientation="horizontal"
            android:scrollbars="none" >
        </View>

        <ScrollView
            android:id="@+id/scrollViewMenu"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/tracks"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_sidemenu_view"
                    android:drawableLeft="@drawable/ic_action_track"
                    android:gravity="left|center_vertical"
                    android:onClick="onTracks"
                    android:text="@string/MyTrackHistory"
                    android:textColor="@color/white" >
                </Button>

                <Button
                    android:id="@+id/messagesButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_sidemenu_view"
                    android:drawableLeft="@drawable/ic_action_messages"
                    android:gravity="left|center_vertical"
                    android:onClick="onMessages"
                    android:text="@string/Messages"
                    android:textColor="@color/white"
                    android:visibility="visible" >
                </Button>

                <Button
                    android:id="@+id/contactsButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_sidemenu_view"
                    android:drawableLeft="@drawable/ic_action_contacts"
                    android:gravity="left|center_vertical"
                    android:onClick="onContacts"
                    android:text="@string/ContactsAndPlaces"
                    android:textColor="@color/white"
                    android:visibility="visible" >
                </Button>

                <Button
                    android:id="@+id/placesButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_sidemenu_view"
                    android:drawableLeft="@drawable/ic_action_contacts"
                    android:gravity="left|center_vertical"
                    android:onClick="onPlaces"
                    android:text="@string/Places"
                    android:textColor="@color/white"
                    android:visibility="gone" >
                </Button>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="#DDDDDD"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:text="@string/Cockpit"
                        android:textAllCaps="true"
                        android:textColor="#333"
                        android:textSize="17sp" >
                    </TextView>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="6dp"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:paddingRight="15dip"
                            android:text="@string/TrackRecording"
                            android:textColor="#333"
                            android:textSize="14sp" />

                        <org.jraf.android.backport.switchwidget.Switch
                            android:id="@+id/switchOnOff"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <RadioGroup
                        android:id="@+id/modeGroup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical" >
                    </RadioGroup>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:visibility="visible" >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical" >

                            <TextView
                                android:id="@+id/block1top"
                                android:layout_width="@dimen/blockwidth"
                                android:layout_height="45dip"
                                android:layout_marginLeft="@dimen/blockspace"
                                android:background="@drawable/block_top"
                                android:clickable="true"
                                android:gravity="center_vertical|center_horizontal"
                                android:onClick="onBlock1"
                                android:text=""
                                android:textColor="#FFFFFF"
                                android:textSize="20dip" >
                            </TextView>

                            <TextView
                                android:id="@+id/block1bottom"
                                android:layout_width="@dimen/blockwidth"
                                android:layout_height="25dip"
                                android:layout_marginLeft="@dimen/blockspace"
                                android:background="@drawable/block_bottom"
                                android:clickable="true"
                                android:gravity="center_vertical|center_horizontal"
                                android:onClick="onBlock1"
                                android:text="@string/GPS"
                                android:textColor="#ddd"
                                android:textSize="10sp" >
                            </TextView>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical" >

                            <TextView
                                android:id="@+id/block2top"
                                android:layout_width="@dimen/blockwidth"
                                android:layout_height="45dip"
                                android:layout_marginLeft="@dimen/blockspace"
                                android:background="@drawable/block_top"
                                android:clickable="true"
                                android:gravity="center_vertical|center_horizontal"
                                android:onClick="onBlock2"
                                android:text=""
                                android:textColor="#FFFFFF"
                                android:textSize="20dip" >
                            </TextView>

                            <TextView
                                android:id="@+id/block2bottom"
                                android:layout_width="@dimen/blockwidth"
                                android:layout_height="25dip"
                                android:layout_marginLeft="@dimen/blockspace"
                                android:background="@drawable/block_bottom"
                                android:clickable="true"
                                android:gravity="center_vertical|center_horizontal"
                                android:onClick="onBlock2"
                                android:text="@string/Internet"
                                android:textColor="#ddd"
                                android:textSize="10sp" >
                            </TextView>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/block3layout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical" >

                            <TextView
                                android:id="@+id/block3top"
                                android:layout_width="@dimen/blockwidth"
                                android:layout_height="45dip"
                                android:layout_marginLeft="@dimen/blockspace"
                                android:background="@drawable/block_top"
                                android:clickable="true"
                                android:gravity="center_vertical|center_horizontal"
                                android:onClick="onBlock3"
                                android:text=""
                                android:textColor="#FFFFFF"
                                android:textSize="20dip" >
                            </TextView>

                            <TextView
                                android:id="@+id/block3bottom"
                                android:layout_width="@dimen/blockwidth"
                                android:layout_height="25dip"
                                android:layout_marginLeft="@dimen/blockspace"
                                android:background="@drawable/block_bottom"
                                android:clickable="true"
                                android:gravity="center_vertical|center_horizontal"
                                android:onClick="onBlock3"
                                android:text="@string/Battery"
                                android:textColor="#ddd"
                                android:textSize="10sp" >
                            </TextView>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="visible" >

                            <TextView
                                android:id="@+id/block4top"
                                android:layout_width="@dimen/blockwidth"
                                android:layout_height="45dip"
                                android:layout_marginLeft="@dimen/blockspace"
                                android:layout_marginRight="@dimen/blockspace"
                                android:background="@drawable/block_top"
                                android:clickable="true"
                                android:gravity="center_vertical|center_horizontal"
                                android:onClick="onBlock4"
                                android:text=""
                                android:textColor="#FFFFFF"
                                android:textSize="20dip" >
                            </TextView>

                            <TextView
                                android:id="@+id/block4bottom"
                                android:layout_width="@dimen/blockwidth"
                                android:layout_height="25dip"
                                android:layout_marginLeft="@dimen/blockspace"
                                android:layout_marginRight="@dimen/blockspace"
                                android:background="@drawable/block_bottom"
                                android:clickable="true"
                                android:gravity="center_vertical|center_horizontal"
                                android:onClick="onBlock4"
                                android:text="@string/Counter"
                                android:textColor="#ddd"
                                android:textSize="10sp" >
                            </TextView>
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/textLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|top"
                        android:layout_marginBottom="10dip"
                        android:layout_marginLeft="20dip"
                        android:layout_marginRight="20dip"
                        android:layout_marginTop="1dip"
                        android:layout_weight="1"
                        android:text="@string/EnsureNoRedBlocks"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/text" >
                    </TextView>
                </LinearLayout>

                <Button
                    android:id="@+id/profileButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_sidemenu_view"
                    android:drawableLeft="@drawable/ic_action_profile"
                    android:drawableRight="@drawable/ic_action_arrow_right"
                    android:gravity="left|center_vertical"
                    android:onClick="onProfile"
                    android:text="@string/ProfileSettings"
                    android:textColor="@color/white"
                    android:visibility="visible" >
                </Button>

                <Button
                    android:id="@+id/accountButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_sidemenu_view"
                    android:drawableLeft="@drawable/ic_action_account"
                    android:drawableRight="@drawable/ic_action_arrow_right"
                    android:gravity="left|center_vertical"
                    android:onClick="onAccountSettings"
                    android:text="@string/Account"
                    android:textColor="@color/white"
                    android:visibility="visible" >
                </Button>

                <Button
                    android:id="@+id/activities"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_sidemenu_view"
                    android:drawableLeft="@drawable/ic_action_bell"
                    android:drawableRight="@drawable/ic_action_arrow_right"
                    android:gravity="left|center_vertical"
                    android:onClick="onActivities"
                    android:text="@string/Activities"
                    android:textColor="@color/white" >
                </Button>

                <Button
                    android:id="@+id/rateUs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_sidemenu_view"
                    android:drawableLeft="@drawable/ic_action_rate"
                    android:drawableRight="@drawable/ic_action_arrow_right"
                    android:gravity="left|center_vertical"
                    android:onClick="onRateUs"
                    android:text="@string/PleaseRate"
                    android:textColor="@color/white" >
                </Button>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</FrameLayout>