<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ht="http://schemas.android.com/apk/res-auto"
    android:id="@+id/frameLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#43536A" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:background="#00000000"
        android:orientation="vertical" >

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CCC"
            android:orientation="horizontal"
            android:scrollbars="none" >
        </View>

        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/tracks"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing"
                    android:layout_marginLeft="@dimen/sidepadding"
                    android:layout_marginRight="@dimen/sidepadding"
                    android:layout_marginTop="0dip"
                    android:background="@drawable/button_sidemenu_view"
                    android:drawableLeft="@drawable/ic_action_tracks"
                    android:drawableRight="@drawable/ic_action_arrow_right"
                    android:gravity="left|center_vertical"
                    android:onClick="onTracks"
                    android:text="@string/Tracks"
                    android:textColor="@color/white" >
                </Button>

                <Button
                    android:id="@+id/activitiesButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing"
                    android:layout_marginLeft="@dimen/sidepadding"
                    android:layout_marginRight="@dimen/sidepadding"
                    android:layout_marginTop="@dimen/sidepadding"
                    android:background="@drawable/button_sidemenu_view"
                    android:drawableLeft="@drawable/ic_action_activities"
                    android:drawableRight="@drawable/ic_action_arrow_right"
                    android:gravity="left|center_vertical"
                    android:onClick="onActivities"
                    android:text="@string/Activities"
                    android:textColor="@color/white"
                    android:visibility="gone" >
                </Button>

                <Button
                    android:id="@+id/messagesButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing"
                    android:layout_marginLeft="@dimen/sidepadding"
                    android:layout_marginRight="@dimen/sidepadding"
                    android:background="@drawable/button_sidemenu_view"
                    android:drawableLeft="@drawable/ic_action_messages"
                    android:drawableRight="@drawable/ic_action_arrow_right"
                    android:gravity="left|center_vertical"
                    android:onClick="onMessages"
                    android:text="@string/Messages"
                    android:textColor="@color/white"
                    android:visibility="visible" >
                </Button>

                <Button
                    android:id="@+id/contactsButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing"
                    android:layout_marginLeft="@dimen/sidepadding"
                    android:layout_marginRight="@dimen/sidepadding"
                    android:background="@drawable/button_sidemenu_view"
                    android:drawableLeft="@drawable/ic_action_contacts"
                    android:drawableRight="@drawable/ic_action_arrow_right"
                    android:gravity="left|center_vertical"
                    android:onClick="onContacts"
                    android:text="@string/ContactsAndPlaces"
                    android:textColor="@color/white"
                    android:visibility="visible" >
                </Button>
                
                <Button
                    android:id="@+id/profileButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/sidepadding"
                    android:background="@drawable/button_sidemenu_view"
                    android:drawableLeft="@drawable/ic_action_profile"
                    android:drawableRight="@drawable/ic_action_arrow_right"
                    android:gravity="left|center_vertical"
                    android:onClick="onProfile"
                    android:text="@string/Profile"
                    android:textColor="@color/white"
                    android:visibility="visible" >
                </Button>

                <Button
                    android:id="@+id/accountButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing"
                    android:layout_marginLeft="@dimen/sidepadding"
                    android:layout_marginRight="@dimen/sidepadding"
                    android:layout_marginTop="@dimen/sidepadding"
                    android:background="@drawable/button_sidemenu_view"
                    android:drawableLeft="@drawable/ic_action_account"
                    android:drawableRight="@drawable/ic_action_arrow_right"
                    android:gravity="left|center_vertical"
                    android:onClick="onAccountSettings"
                    android:text="@string/Account"
                    android:textColor="@color/white"
                    android:visibility="visible" >
                </Button>



                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="20dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="15dip"
                        android:text="@string/TrackRecording"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                    <org.jraf.android.backport.switchwidget.Switch
                        android:id="@+id/switchOnOff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                         />
                </LinearLayout>

                <RadioGroup
                    android:id="@+id/modeGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:layout_marginTop="3dip"
                    android:orientation="horizontal" >

                    <RadioButton
                        android:id="@+id/outdoorButton"
                        style="@style/ToggleButtonLeft"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:checked="true"
                        android:text="@string/Outdoor"
                        android:textSize="11sp" />

                    <RadioButton
                        android:id="@+id/transportButton"
                        style="@style/ToggleButtonMiddle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/Transport"
                        android:textSize="11sp" />

                    <RadioButton
                        android:id="@+id/roughLocatingButton"
                        style="@style/ToggleButtonRight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/Battery"
                        android:textSize="11sp" />
                </RadioGroup>

                <TextView
                    android:id="@+id/modeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/OutdoorShortDesc"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:visibility="visible"
                    android:padding="2dp" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_gravity="center"
                        android:visibility="visible" >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical" >

                            <TextView
                                android:id="@+id/block1top"
                                android:layout_width="@dimen/blockwidth"
                                android:layout_height="45dip"
                                android:layout_marginLeft="@dimen/blockspace"
                                android:background="@drawable/block_top"
                                android:clickable="true"
                                android:gravity="center_vertical|center_horizontal"
                                android:onClick="onBlock1"
                                android:text=""
                                android:textColor="#FFFFFF"
                                android:textSize="20dip" >
                            </TextView>

                            <TextView
                                android:id="@+id/block1bottom"
                                android:layout_width="@dimen/blockwidth"
                                android:layout_height="25dip"
                                android:layout_marginLeft="@dimen/blockspace"
                                android:background="@drawable/block_bottom"
                                android:clickable="true"
                                android:gravity="center_vertical|center_horizontal"
                                android:onClick="onBlock1"
                                android:text="@string/GPS"
                                android:textColor="#ddd"
                                android:textSize="10sp" >
                            </TextView>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical" >

                            <TextView
                                android:id="@+id/block2top"
                                android:layout_width="@dimen/blockwidth"
                                android:layout_height="45dip"
                                android:layout_marginLeft="@dimen/blockspace"
                                android:background="@drawable/block_top"
                                android:clickable="true"
                                android:gravity="center_vertical|center_horizontal"
                                android:onClick="onBlock2"
                                android:text=""
                                android:textColor="#FFFFFF"
                                android:textSize="20dip" >
                            </TextView>

                            <TextView
                                android:id="@+id/block2bottom"
                                android:layout_width="@dimen/blockwidth"
                                android:layout_height="25dip"
                                android:layout_marginLeft="@dimen/blockspace"
                                android:background="@drawable/block_bottom"
                                android:clickable="true"
                                android:gravity="center_vertical|center_horizontal"
                                android:onClick="onBlock2"
                                android:text="@string/Internet"
                                android:textColor="#ddd"
                                android:textSize="10sp" >
                            </TextView>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/block3layout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical" >

                            <TextView
                                android:id="@+id/block3top"
                                android:layout_width="@dimen/blockwidth"
                                android:layout_height="45dip"
                                android:layout_marginLeft="@dimen/blockspace"
                                android:background="@drawable/block_top"
                                android:clickable="true"
                                android:gravity="center_vertical|center_horizontal"
                                android:onClick="onBlock3"
                                android:text=""
                                android:textColor="#FFFFFF"
                                android:textSize="20dip" >
                            </TextView>

                            <TextView
                                android:id="@+id/block3bottom"
                                android:layout_width="@dimen/blockwidth"
                                android:layout_height="25dip"
                                android:layout_marginLeft="@dimen/blockspace"
                                android:background="@drawable/block_bottom"
                                android:clickable="true"
                                android:gravity="center_vertical|center_horizontal"
                                android:onClick="onBlock3"
                                android:text="@string/Battery"
                                android:textColor="#ddd"
                                android:textSize="10sp" >
                            </TextView>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="visible" >

                            <TextView
                                android:id="@+id/block4top"
                                android:layout_width="@dimen/blockwidth"
                                android:layout_height="45dip"
                                android:layout_marginLeft="@dimen/blockspace"
                                android:layout_marginRight="@dimen/blockspace"
                                android:background="@drawable/block_top"
                                android:clickable="true"
                                android:gravity="center_vertical|center_horizontal"
                                android:onClick="onBlock4"
                                android:text=""
                                android:textColor="#FFFFFF"
                                android:textSize="20dip" >
                            </TextView>

                            <TextView
                                android:id="@+id/block4bottom"
                                android:layout_width="@dimen/blockwidth"
                                android:layout_height="25dip"
                                android:layout_marginLeft="@dimen/blockspace"
                                android:layout_marginRight="@dimen/blockspace"
                                android:background="@drawable/block_bottom"
                                android:clickable="true"
                                android:gravity="center_vertical|center_horizontal"
                                android:onClick="onBlock4"
                                android:text="@string/Counter"
                                android:textColor="#ddd"
                                android:textSize="10sp" >
                            </TextView>
                        </LinearLayout>
                    </LinearLayout>
                </FrameLayout>

                <TextView
                    android:id="@+id/textLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dip"
                    android:layout_marginRight="20dip"
                    android:layout_marginTop="1dip"
                    android:text="@string/EnsureNoRedBlocks"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#FFF" >
                </TextView>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</FrameLayout>