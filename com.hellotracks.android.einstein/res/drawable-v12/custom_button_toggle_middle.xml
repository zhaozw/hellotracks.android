<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true" android:state_pressed="false"><shape>
            <solid android:color="@color/light" />

            <stroke android:width="0.5dip" android:color="@color/stroke" />

            <padding android:bottom="@dimen/padding" android:left="@dimen/padding" android:right="@dimen/padding" android:top="@dimen/padding" />
        </shape></item>
    <item android:state_checked="false" android:state_pressed="false"><shape>
            <solid android:color="@color/unselected" />

            <stroke android:width="0.5dip" android:color="@color/stroke" />

            <padding android:bottom="@dimen/padding" android:left="@dimen/padding" android:right="@dimen/padding" android:top="@dimen/padding" />
        </shape></item>
    <item android:state_pressed="true"><shape>
            <solid android:color="@color/pressed" />

            <stroke android:width="0.5dip" android:color="@color/stroke" />

            <padding android:bottom="@dimen/padding" android:left="@dimen/padding" android:right="@dimen/padding" android:top="@dimen/padding" />
        </shape></item>

</selector>