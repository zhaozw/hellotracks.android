<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
             <solid
                android:color="#D999" />
            <stroke
                android:width="1dp"
                android:color="#FCCC" />
            <corners android:radius="1dp"/>
            <padding 
                android:left="8dp"
                android:top="8dp"
                android:right="8dp"
                android:bottom="8dp" />
        </shape>
    </item>

    <item>        
        <shape>
            <solid
                android:color="#DFFF" />
            <stroke
                android:width="1dp"
                android:color="#F999" />
            <corners android:radius="1dp"/>
            <padding 
                android:left="8dp"
                android:top="8dp"
                android:right="8dp"
                android:bottom="8dp" />
        </shape>
    </item>
</selector>
