<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <corners android:radius="@dimen/corners" />

            <solid android:color="@color/pressed" />

            <stroke android:width="0.5dip" android:color="@color/stroke" />

            <padding android:bottom="@dimen/padding" android:left="@dimen/padding" android:right="@dimen/padding" android:top="@dimen/padding" />
        </shape></item>
    <item><shape>
            <corners android:radius="@dimen/corners" />

            <solid android:color="@color/selected" />

            <stroke android:width="0.5dip" android:color="@color/stroke" />

            <padding android:bottom="@dimen/padding" android:left="@dimen/padding" android:right="@dimen/padding" android:top="@dimen/padding" />
        </shape></item>

</selector>