<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#FF440000" />
            <padding
                android:left="0dp"
                android:top="2dp"
                android:right="0dp"
                android:bottom="2dp" />
        </shape>
    </item>
    <item>        
        <shape>
             <gradient
                android:startColor="#FF881111"
                android:endColor="#EE881111"
                android:angle="270" />

            <padding
                android:left="0dp"
                android:top="2dp"
                android:right="0dp"
                android:bottom="2dp" />
        </shape>
    </item>
</selector>
