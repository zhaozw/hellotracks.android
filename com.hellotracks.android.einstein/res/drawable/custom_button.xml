<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#F999"
                android:endColor="#2999"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="#Ffc6" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item>        
        <shape>
            <gradient
                android:type="radial"
            	android:gradientRadius="200"
                android:startColor="#3FFF"
                android:endColor="#3000" />
            <stroke
                android:width="1dp"
                android:color="#F555" />
        </shape>
    </item>
</selector>
