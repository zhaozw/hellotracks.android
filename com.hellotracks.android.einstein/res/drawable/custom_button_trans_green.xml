<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#FF004400" />
            <stroke
                android:width="0.5dp"
                android:color="#6fff" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item>        
        <shape>
             <gradient
                android:startColor="#FF118811"
                android:endColor="#EE118811"
                android:angle="270" />
            <stroke
                android:width="0.5dp"
                android:color="#6fff" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>
