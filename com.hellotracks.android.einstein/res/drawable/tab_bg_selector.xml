<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:state_pressed="true">
		<shape>
			<solid android:color="@color/pressed" />
			<stroke android:width="0.5dip" android:color="@color/stroke" />
			<padding android:bottom="@dimen/padding" android:left="@dimen/padding" android:right="@dimen/padding" android:top="@dimen/padding" />
		</shape>
	</item>
	<item android:state_selected="true">
		<shape>
			<gradient android:startColor="@color/light" android:centerColor="@color/selected" android:endColor="@color/pressed" android:angle="-90" />
		</shape>
	</item>
	<item>
		<shape>
			<solid android:color="@color/dark" />
			<stroke android:width="0.5dip" android:color="@color/stroke" />
			<padding android:bottom="@dimen/padding" android:left="@dimen/padding" android:right="@dimen/padding" android:top="@dimen/padding" />
		</shape>
	</item>
</selector>