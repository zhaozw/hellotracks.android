<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#F999"
                android:endColor="#9999"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="#Ffc6" />
        </shape>
    </item>

    <item>        
        <shape>
            <solid android:color="@color/transparent"/>
            <stroke
                android:width="1px"
                android:color="#1fff" />
        </shape>
    </item>
</selector>
