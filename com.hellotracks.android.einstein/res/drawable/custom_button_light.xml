<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#F999"
                android:endColor="#9999"
                android:angle="270" />
            <padding
                android:left="0dp"
                android:top="2dp"
                android:right="0dp"
                android:bottom="2dp" />
        </shape>
    </item>

    <item>        
        <shape>     
            <solid android:color="@color/transparent"/>     
           <padding
                android:left="0dp"
                android:top="2dp"
                android:right="0dp"
                android:bottom="2dp" />
        </shape>
    </item>
</selector>
