<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false" >
        <shape>
            <solid
                android:color="#C9C9C9" />
            <corners android:radius="@dimen/button_radius"/> 
            <padding
                android:left="@dimen/button_padding_leftright"
                android:right="@dimen/button_padding_leftright"
                android:top="@dimen/button_padding_topdown"
                android:bottom="@dimen/button_padding_topdown" />
        </shape>
    </item>
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="@color/pressed" />
            <corners android:radius="@dimen/button_radius"/> 
            <padding
                android:left="@dimen/button_padding_leftright"
                android:right="@dimen/button_padding_leftright"
                android:top="@dimen/button_padding_topdown"
                android:bottom="@dimen/button_padding_topdown" />
        </shape>
    </item>
    <item>
        <shape>
            <solid
                android:color="@color/selected" />
            <corners android:radius="@dimen/button_radius"/> 
            <padding
                android:left="@dimen/button_padding_leftright"
                android:right="@dimen/button_padding_leftright"
                android:top="@dimen/button_padding_topdown"
                android:bottom="@dimen/button_padding_topdown" />
        </shape>
    </item>
</selector>