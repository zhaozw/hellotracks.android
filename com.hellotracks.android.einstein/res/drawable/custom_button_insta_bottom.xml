<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
          <solid android:color="@color/pressed" />
          <corners 
                android:bottomLeftRadius="@dimen/corners" android:bottomRightRadius="@dimen/corners"/>
            <stroke android:width="1px" android:color="@color/stroke" />
			<padding android:left="@dimen/padding" android:top="@dimen/padding"
				android:right="@dimen/padding" android:bottom="@dimen/padding" />
        </shape>
    </item>

    <item>        
        <shape>
            <solid android:color="#FFF" />
            <stroke android:width="1px" android:color="@color/stroke" />
			<padding android:left="@dimen/padding" android:top="@dimen/padding"
				android:right="@dimen/padding" android:bottom="@dimen/padding" />
            <corners 
                android:bottomLeftRadius="@dimen/corners" android:bottomRightRadius="@dimen/corners"/>
        </shape>
    </item>
</selector>
